<div class="app-card-container">
	<div class="card">
		<h1>About Me</h1>

		<hr>

		<div class="row">
			<div class="col-md-4">

				<%= image_tag "pd_photo.jpg", size: "200x200", alt: "Profile Image", class: 'profile-image' %>
			
				
			</div>

			


			<div class="col-md-8">
				<p>
					Patrick is a skilled software engineer with broad experience in provision of complex software solutions with strong communication skills and business acumen.
				</p>
				<p>
					Clear and regular customer communication from initial meeting until successful delivery including regular updates during the development cycle ensure a final solution that aligns with the customer's requirements and expectations in terms of quality and delivery times.
				</p>
				<p>
					<button
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#jobHistory"
						aria-expanded="false"
						aria-controls="jobHistory"
					>
						Job History
					</button>
					<button
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#education"
						aria-expanded="false"
						aria-controls="education"
					>
						Education
					</button>
					<button
						class="btn btn-primary"
						type="button"
						data-toggle="collapse"
						data-target="#skills"
						aria-expanded="false"
						aria-controls="skills"
					>
						Skills
					</button>
				</p>
				<p>
					<div class="collapse" id="jobHistory">
						<div class="card card-body">
							Job 1
						</div>
						<div class="card card-body">
							Job 2
						</div>
					</div>
					<div class="collapse" id="education">
						<div class="card card-body">
							Education 1
						</div>
						<div class="card card-body">
							Education 2
						</div>
						<div class="card card-body">
							Education 3
						</div>
					</div>
				</p>
					<div class="collapse" id="skills">
						<div class="skills">
							<div class="skill">
								<% @skills.each do |skill| %>
									<h5><%= skill.title %></h5>
									<div class="progress">
										<div 
											class="progress-bar progress-bar-striped bg-warning"
											role="progressbar"
											aria-valuenow="<%=skill.percent_utilized%>"
											aria-valuemax="100"
											style="width: <%=skill.percent_utilized%>%;"
										></div>
									</div>
								<% end %>
							</div>
				</div>

			</div>
		</div>
	</div>


</div>

